@model IEnumerable<CourseViewModel>

<table class="table table-striped table-bordered">
    <thead><tr><th>Course</th><th>Instructor</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.InstructorName</td>
                <td>
                    <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary">View Details</a>
                    <a asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mb-2">
    <a asp-controller="Course" asp-action="Create" class="btn btn-success">Create New Course</a>
</div>
<div>
    <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary">Logout</a>
</div>


